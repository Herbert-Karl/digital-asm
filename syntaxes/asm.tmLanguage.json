{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Assembler",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.asm",
				"match": ";.*$"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.asm",
				"match": "\\b(BRCS|BREQ|BRMI|BRCC|BRNE|BRPL|RCALL|RRET|JMP|JMPs|BRK|RETI)\\b"
			},
			{
				"name": "keyword.operator.asm",
				"match": "\\b(NOP|MOV|ADD|ADC|SUB|SBC|AND|OR|EOR|LDI|LDIs|ADDI|ADDIs|ADCI|ADCIs|SUBI|SUBIs|SBCI|SBCIs|ANDI|ANDIs|ORI|ORIs|EORI|EORIs|MUL|MULI|MULIs|CMP|CPI|CPIs|LSL|LSR|ROL|ROR|ASR|SWAP|SWAPN|ST|LD|STS|STSs|LDS|LDSs|STD|LDD|OUT|OUTs|OUTR|IN|INs|INR)\\b"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.asm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.asm",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.asm"
}