{
    "name": "digital-asm",
    "displayName": "Digital Assembler",
    "description": "Extension offering code completion, compiling, executing and single step debugging for asm files used with Digital",
    "version": "0.5.0",
    "publisher": "Herbert-Karl",
    "author": {
        "name": "Herbert BÃ¤rschneider"
    },
    "repository": {
        "url": "https://github.com/Herbert-Karl/digital-asm.git"
    },
    "engines": {
        "vscode": "^1.43.0"
    },
    "license": "GPL-3.0-or-later",
    "categories": [
        "Programming Languages",
        "Debuggers"
    ],
    "keywords": [
        "assembler, digital"
    ],
    "qna": false,
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:asm"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Digital-Asm",
            "properties": {
                "asm.simulatorHost": {
                    "type": "string",
                    "description": "IP Address at which the simulator runs",
                    "default": "localhost"
                },
                "asm.simulatorPort": {
                    "type": "number",
                    "description": "Port at which the TcpListener of the simulator runs",
                    "default": 41114
                },
                "asm.assembler": {
                    "type": "string",
                    "description": "Location of the jar file of the ASM3 program",
                    "default": "./asm3.jar"
                },
                "asm.brkHandling": {
                    "type": "boolean",
                    "description": "Option to handle BRK Mnemonics as BreakPoints when debugging",
                    "default": "true"
                }
            }
        },
        "languages": [
            {
                "id": "asm",
                "aliases": [
                    "Assembler",
                    "asm"
                ],
                "extensions": [
                    ".asm",
                    ".hex"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "asm",
                "scopeName": "source.asm",
                "path": "./syntaxes/asm.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "digital-asm.parse-asm",
                "title": "Parsing of a .asm file into a corresponding .hex file",
                "category": "Digital Assembler"
            },
            {
                "command": "digital-asm.execute-asm",
                "title": "Running of a .asm file in the digital simulator",
                "category": "Digital Assembler"
            }
        ],
        "breakpoints": [
            {
                "language": "asm"
            }
        ],
        "debuggers": [
            {
                "type": "digital-conn",
                "label": "Asm Debug",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "languages": [
                    "asm"
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "file",
                            "stopOnEntry"
                        ],
                        "properties": {
                            "file": {
                                "type": "string",
                                "description": "the file to debug"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "if the debugger should halt at the first file line"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "digital-conn",
                        "request": "launch",
                        "name": "Debugging",
                        "file": "${command:DeriveFile}",
                        "stopOnEntry": true
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Asm Debug",
                        "description": "configuration for debugging an asm file",
                        "body": {
                            "type": "digital-conn",
                            "request": "launch",
                            "name": "Debugging",
                            "file": "^\"\\${command:DeriveFile}\"",
                            "stopOnEntry": true
                        }
                    }
                ],
                "variables": {
                    "DeriveFile": "digital-asm.getFile"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.12.30",
        "@types/vscode": "^1.43.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "tslint": "^5.20.0",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "await-notify": "^1.0.1",
        "vscode-debugadapter": "^1.39.0"
    }
}
