{
    "name": "digital-asm",
    "displayName": "Digital Assembler",
    "description": "Plugin offering code completion, compiling, executing and single step debugging for asm files used with Digital",
    "version": "0.1.0",
    "publisher": "Herbert-Karl",
    "author": {
        "name": "Herbert BÃ¤rschneider"
    },
    "repository": {
        "url": "https://github.com/Herbert-Karl/digital-asm.git"
    },
    "engines": {
        "vscode": "^1.40.0"
    },
    "license": "GPL-3.0-or-later",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "assembler, digital"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:asm"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Digital-Asm",
            "properties": {
                "asm.simulatorHost": {
                    "type": "string",
                    "description": "IP Address at which the simulator runs",
                    "format": "ipv4",
                    "default": "127.0.0.1"
                },
                "asm.simulatorPort": {
                    "type": "number",
                    "description": "Port at which the TcpListener of the simulator runs",
                    "default": 41114
                },
                "asm.assembler": {
                    "type": "string",
                    "description": "Location of the jar file of the ASM3 programm",
                    "default": "./asm3.jar"
                }
            }
        },
        "languages": [
            {
                "id": "asm",
                "aliases": [
                    "Assembler",
                    "asm"
                ],
                "extensions": [
                    ".asm",
                    ".hex"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "asm",
                "scopeName": "source.asm",
                "path": "./syntaxes/asm.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.30",
        "@types/vscode": "^1.43.0",
        "tslint": "^5.20.0",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
